<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/menu') %>

    <div class="content">
        <div class="container">
            <div class="control-box p-3 main-content">
                <div class="col-sm-2">
                    <nav class="nav-sidebar">
                        <ul class="nav">
                            <li><a href="/">Home</a></li>
                            <li class="active"><a href="javascript:;">Products</a></li>  
                            <% for(var i=0; i < categories.length; i++) { %>
                                <li><a href="javascript:;"><%= categories[i].key%> (<%= categories[i].doc_count%>)</a></li> 
                                
                                <% } %>
                        </ul>
                    </nav>
                </div>

                <h3> Total Search Results: <%= resultCount %></h3><br>

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>PartNumber</th>
                            <th>Name</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i]._source.PartNumber%></td>
                            <td><%= data[i]._source.DisplayName%></td>
                            <td><%= data[i]._source.Price%></td>
                        </tr>

                        <% } %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</body>

<%- include('./partials/script') %>


</html>